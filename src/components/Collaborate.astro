<style>
  .collab_wrapper {
    width: 100%;
    overflow: hidden;
    position: relative;
    white-space: nowrap;
  }

  .img_wrapper {
    display: flex;
    width: 100%;
    animation: scrollImg 10s linear infinite;
  }

  img {
    width: auto;
    height: 3rem;
    margin: 0 1.2rem;
  }

  @keyframes scrollImg {
    from {
      transform: translateX(0%);
    }
    to {
      transform: translateX(-134.5%);
    }
  }
  @media (min-width: 700px) {
    img {
      height: 6rem;
      width: auto;
      margin: 0 1.5rem;
    }

    @keyframes scrollImg {
      from {
        transform: translateX(0%);
      }
      to {
        transform: translateX(-96.5%);
      }
    }
  }
</style>
