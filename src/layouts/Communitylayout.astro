---
import "../style/generalstyle.css";
import Button from "../components/Button.astro";

import Footer from "../components/Footer.astro";
import Navto from "../components/Navto.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Affiliated" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <title>Community</title>
  </head>

  <body>
    <div class="scroll_container">
      <div class="scroll_indicator"></div>
    </div>
    <Navto />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  .scroll_container {
    position: fixed;
    top: 0;
    width: 100%;
    height: 0.5rem;
    background-color: lightgray;
    z-index: 99;
  }

  .scroll_indicator {
    width: 0%;
    height: 100%;
    background-color: var(--buttonColor);
  }
  html {
    overflow-x: hidden;
  }
</style>

<script>
  window.addEventListener("scroll", onScroll);

  function onScroll() {
    const scrolled = document.body.scrollTop || document.documentElement.scrollTop;
    const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    const scrolledfactor = (scrolled / height) * 100;
    document.querySelector(".scroll_indicator").style.width = scrolledfactor + "%";
  }
</script>
